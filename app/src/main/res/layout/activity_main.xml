<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/swing_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="職業"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <Spinner
                    android:id="@+id/sp_career"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:text="Lv"
                    android:textColor="#000000"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/lminus_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/ravi_prakash"
                    android:onClick="lvminus"
                    android:text="-"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edlv"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/ravi_prakash"
                    android:inputType="numberDecimal"
                    android:text="1"
                    android:textColor="#696969"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/ravi_prakash"
                    android:onClick="lvplus"
                    android:text="+"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:text="STR"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/sminus_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:onClick="sminus"
                    android:background="@drawable/button_background"
                    android:text="-"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_str"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:textColor="#696969"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/splus_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:onClick="splus"
                    android:background="@drawable/button_background"
                    android:text="+"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:text="INT"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/iminus_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:onClick="iminus"
                    android:background="@drawable/button_background"
                    android:text="-"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_int"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:textColor="#696969"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/iplus_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:onClick="iplus"
                    android:background="@drawable/button_background"
                    android:text="+"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:text="VIT"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/vminus_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:onClick="vminus"
                    android:background="@drawable/button_background"
                    android:text="-"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_vit"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:textColor="#696969"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/vplus_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:onClick="vplus"
                    android:background="@drawable/button_background"
                    android:text="+"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:text="DEX"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/dminus_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:background="@drawable/button_background"
                    android:onClick="dminus"
                    android:text="-"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_dex"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:textColor="#696969"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/dplus_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:onClick="dplus"
                    android:background="@drawable/button_background"
                    android:text="+"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:text="AGI"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/aminus_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:background="@drawable/button_background"
                    android:onClick="aminus"
                    android:text="-"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_agi"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:textColor="#696969"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/aplus_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ravi_prakash"
                    android:background="@drawable/button_background"
                    android:onClick="aplus"
                    android:text="+"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/introduction_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="introduction"
                    android:background="@drawable/button_background"
                    android:text="簡介"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/skill_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="skills"
                    android:background="@drawable/button_background"
                    android:text="技能"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/result_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:layout_weight="1"
                    android:onClick="result"
                    android:text="計算結果"
                    android:textSize="24sp" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>